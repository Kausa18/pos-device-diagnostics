<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/diagnostics_title"
            app:titleCentered="true"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- PREMIUM Health Summary Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_header_bg"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health_overview_title"
                        android:textColor="@color/brand_blue_dark"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/totalScansText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/initial_test_count"
                                android:textColor="@color/text_primary"
                                android:textSize="36sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cumulative_runs"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lastStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/state_ready"
                                android:textColor="@color/status_pass_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/issuesCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/all_systems_healthy"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/lastScanDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btnViewLastReport"
                            android:layout_alignParentStart="true"
                            android:text="@string/never_scanned"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-light"
                            android:ellipsize="end"
                            android:maxLines="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewLastReport"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:text="@string/label_view_last_report"
                            android:textColor="@color/brand_blue_dark"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </RelativeLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:text="@string/test_individually_hint"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:columnCount="4"
                android:alignmentMode="alignMargins">

                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnDeviceInfo" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnBattery" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnNetwork" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnSignal" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnStorage" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnPrinter" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnLedBuzzer" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnIcCard" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnNfcTap" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnTouchscreen" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnCharging" />
                <include layout="@layout/item_diagnostic_icon" android:id="@+id/btnViewHistory" />
            </GridLayout>

            <!-- Status Label (Hidden but used by code) -->
            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Technical Log -->
            <TextView
                android:id="@+id/outputLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="#F8F9FA"
                android:padding="12dp"
                android:fontFamily="monospace"
                android:text="@string/system_standby_log"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Pinned -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRunAll"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="@string/start_all_tests"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:cornerRadius="32dp"
        android:backgroundTint="@color/brand_blue"
        app:elevation="8dp"
        app:icon="@drawable/ic_touch"
        app:iconGravity="textStart"
        app:iconPadding="12dp" />

    <!-- Action Overlay (Prompt) -->
    <FrameLayout
        android:id="@+id/actionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EE000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.feitian.diagnostics.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_required"
                    android:textColor="@color/brand_blue"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overlayPromptText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/overlayTimerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/countdown_zero"
                    android:textColor="@color/status_fail_text"
                    android:textSize="72sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- Result Overlay -->
    <FrameLayout
        android:id="@+id/resultOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/resultIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/status_pass"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/resultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_test_result"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resultStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/badge_bg_pass"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:text="@string/status_passed_caps"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resultDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/test_name_placeholder"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRetryResult"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/action_retry_caps"
                        app:cornerRadius="28dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCloseResult"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/action_continue"
                        app:cornerRadius="28dp"
                        android:backgroundTint="@color/brand_blue" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPrintReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"
        android:visibility="gone"
        android:contentDescription="@string/print_receipt"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:backgroundTint="@color/brand_blue"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
